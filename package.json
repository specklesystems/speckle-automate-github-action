{
  "name": "speckle-automate-github-action",
  "author": "Speckle Systems",
  "version": "0.0.0",
  "description": "Speckle Automate Github Action",
  "packageManager": "yarn@3.5.0",
  "license": "Apache-2.0",
  "main": "lib/main.js",
  "type": "module",
  "scripts": {
    "all": "yarn run build && yarn run prettier:check && yarn run lint && yarn run package && yarn run test",
    "build": "tsc",
    "build:image": "docker build -t speckle/speckle-automate-github-action:local .",
    "coverage": "vitest run --coverage",
    "lint": "eslint **/*.ts",
    "package": "ncc build --target es2020 --source-map --license licenses.txt -o dist src/main.ts",
    "precommit": "pre-commit run --all-files",
    "prettier:check": "prettier --check '**/*.ts'",
    "prettier:fix": "prettier --write '**/*.ts'",
    "test": "vitest --run"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vercel/ncc": "^0.36.1",
    "chai": "^4.3.7",
    "eslint": "^8.36.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-filenames": "latest",
    "eslint-plugin-github": "^4.6.1",
    "eslint-plugin-i18n-text": "^1.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vitest": "^0.0.54",
    "js-yaml": "^4.1.0",
    "prettier": "^2.8.5",
    "typescript": "^5.0.2",
    "vite": "^4.2.1",
    "vitest": "^0.29.7"
  }
}
